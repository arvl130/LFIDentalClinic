@model LFIDentalClinic.Models.DentalTreatment

@{
    ViewBag.Title = "Delete Treatment";
}

@using (Html.BeginForm("DeleteTreatment", "Patients", FormMethod.Post, new { @class = "max-w-sm mx-auto mt-36 px-6 py-8 border border-sky-600" }))
{
    @Html.AntiForgeryToken()
    <p class="mb-3 text-center">Are you sure you want to delete this record?</p>

    <div class="max-w-xs mx-auto mb-6">
        <div class="grid grid-cols-[8rem_1fr] gap-2">
            <div class="text-right font-semibold">@Html.DisplayNameFor(m => m.Service)</div>
            <div>@Html.DisplayFor(m => m.Service)</div>
        </div>
        <div class="grid grid-cols-[8rem_1fr] gap-2">
            <div class="text-right font-semibold">@Html.DisplayNameFor(m => m.CreatedDate)</div>
            <div>@Html.DisplayFor(m => m.CreatedDate)</div>
        </div>
    </div>

    <div class="grid grid-cols-2 gap-4">
        @Html.ActionLink("No", "ViewTreatment", new { id = ViewContext.RouteData.Values["id"], treatmentId = ViewContext.RouteData.Values["treatmentId"] }, new { @class = "border border-sky-600 py-1 text-center hover:bg-sky-600 hover:text-white transition duration-200" })
        <button type="submit" class="border border-sky-600 py-1 text-center hover:bg-red-600 hover:border-red-600 hover:text-white transition duration-200">Yes</button>
    </div>
}