@model LFIDentalClinic.Models.Patient
@{
    ViewBag.Title = "Delete";
}

<div>
    @using (Html.BeginForm("Delete", "Patients", FormMethod.Post, new { @class = "max-w-fit mx-auto mt-36 px-6 py-8 border border-sky-600" }))
    {
        @Html.AntiForgeryToken()
        <p class="mb-3 text-center">Are you sure you want to delete this patient?</p>

        <div class="max-w-fit mx-auto mb-6">
            <div class="grid grid-cols-[5rem_1fr] gap-2">
                <div class="uppercase text-right font-semibold">@Html.DisplayNameFor(m => m.Id)</div>
                <div>@Html.DisplayFor(m => m.Id)</div>
            </div>
            <div class="grid grid-cols-[5rem_1fr] gap-2">
                <div class="text-right font-semibold">@Html.DisplayNameFor(m => m.FullName)</div>
                <div>@Html.DisplayFor(m => m.FullName)</div>
            </div>
            <div class="grid grid-cols-[5rem_1fr] gap-2">
                <div class="text-right font-semibold">@Html.DisplayNameFor(m => m.Email)</div>
                <div>@Html.DisplayFor(m => m.Email)</div>
            </div>
        </div>

        <div class="grid grid-cols-2 gap-4">
            @Html.ActionLink("No", "Details", new { id = ViewContext.RouteData.Values["id"] }, new { @class = "border border-sky-600 py-1 text-center hover:bg-sky-600 hover:text-white transition duration-200" })
            <button type="submit" class="border border-sky-600 py-1 text-center hover:bg-red-600 hover:border-red-600 hover:text-white transition duration-200">Yes</button>
        </div>
    }
</div>
